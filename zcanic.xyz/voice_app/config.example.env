# Zcanic Voice Service .env 示例文件
# 复制此文件为 .env 并填入您的配置

# 服务配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false
API_KEY=your_api_key_here

# AI API配置
AI_API_BASE=https://api.openai.com/v1
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo

# Voicevox配置
VOICEVOX_ENGINE_URL=http://localhost:50021
VOICEVOX_SPEAKER_ID=46

# 路径配置
AUDIO_STORAGE_PATH=./audio_storage

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs 